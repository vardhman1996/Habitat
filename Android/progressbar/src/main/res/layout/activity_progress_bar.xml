<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#191919"
    android:weightSum="1"
    >



    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/button"
        android:src="@drawable/checkmark"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/bar1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar"
        android:background="@drawable/progressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10"
        android:progress="0" />



    <ProgressBar
        android:id="@+id/bar2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/redprogressbar"
        android:background="@drawable/redprogressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10"
        android:progress="0" />
    <ProgressBar
        android:id="@+id/bar3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/completedbar"
        android:background="@drawable/completedbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10"
        android:progress="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textColor="#ffffff"
        android:id="@+id/days_total"
        android:layout_marginBottom="88dp"
        android:layout_alignBottom="@+id/bar1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textColor="#ffffff"
        android:id="@+id/days_progress"
        android:layout_above="@+id/days_total"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textColor="#ffffff"
        android:id="@+id/days_skipped"
        android:layout_above="@+id/days_progress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="D"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:editable="true"/>


</RelativeLayout>
